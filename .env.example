# ============================================
# ft_transcendence Environment Configuration
# ============================================
# Copy this file to .env and update with your values
# NEVER commit the .env file to version control!

# ============================================
# JWT Secrets (REQUIRED - Generate secure values!)
# ============================================
# Generate with: openssl rand -base64 32

# Secret for signing user authentication tokens
JWT_SECRET=your-jwt-secret-here

# Secret for inter-service communication tokens
SERVICE_JWT_SECRET=your-service-jwt-secret-here

# Secret for service-to-service authentication headers
SERVICE_SECRET=your-service-secret-here

# ============================================
# Database Paths
# ============================================
AUTH_DB_PATH=/usr/src/app/data/auth.sqlite
USER_DB_PATH=/usr/src/app/data/user.sqlite
PONG_DB_PATH=/usr/src/app/data/pong.sqlite

# ============================================
# Grafana Configuration
# ============================================
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=your-grafana-password-here
