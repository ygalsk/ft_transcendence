localhost {
    # Grafana Dashboard (must come before /* catch-all)
    handle /dashboard* {
        reverse_proxy grafana:3000
    }

    # Backend API
    handle /api/* {
        reverse_proxy backend:3000
    }

    # Frontend - everything else (fallback)
    handle /* {
        reverse_proxy frontend:5173
    }
}

 transcendence.keystone-gateway.dev {
     # Grafana Dashboard
     handle /dashboard {
         reverse_proxy grafana:3000
     }

     # Backend API
     handle /api/* {
         reverse_proxy backend:3000
     }

     # Frontend - everything else (fallback)
     handle /* {
         reverse_proxy frontend:5173
     }
 }
