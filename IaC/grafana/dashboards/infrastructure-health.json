{
  "title": "Infrastructure Health",
  "uid": "infra-health",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "5s",
  "editable": true,
  "panels": [
    {
      "id": 1,
      "title": "CPU Usage by Service",
      "type": "timeseries",
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "rate(process_cpu_seconds_total{job=~\"auth-service|user-service|pong-service\"}[1m])",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "custom": { "fillOpacity": 10 }
        }
      },
      "options": {}
    },
    {
      "id": 2,
      "title": "Memory Usage by Service",
      "type": "timeseries",
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "nodejs_heap_size_used_bytes{job=~\"auth-service|user-service|pong-service\"}",
          "legendFormat": "{{job}} - heap used",
          "refId": "A"
        },
        {
          "expr": "process_resident_memory_bytes{job=~\"auth-service|user-service|pong-service\"}",
          "legendFormat": "{{job}} - resident",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes"
        }
      },
      "options": {}
    },
    {
      "id": 3,
      "title": "HTTP Request Rate",
      "type": "timeseries",
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total[1m])) by (job)",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": { "fillOpacity": 10 }
        }
      },
      "options": {}
    },
    {
      "id": 4,
      "title": "HTTP Latency (p50, p95, p99)",
      "type": "timeseries",
      "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_seconds_bucket[1m])) by (job, le))",
          "legendFormat": "{{job}} - p50",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[1m])) by (job, le))",
          "legendFormat": "{{job}} - p95",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket[1m])) by (job, le))",
          "legendFormat": "{{job}} - p99",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      },
      "options": {}
    },
    {
      "id": 5,
      "title": "Active HTTP Requests",
      "type": "timeseries",
      "gridPos": { "x": 0, "y": 16, "w": 8, "h": 8 },
      "targets": [
        {
          "expr": "http_requests_active",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      },
      "options": {}
    },
    {
      "id": 6,
      "title": "Error Rate by Service",
      "type": "timeseries",
      "gridPos": { "x": 8, "y": 16, "w": 8, "h": 8 },
      "targets": [
        {
          "expr": "sum(rate(errors_total[1m])) by (job, type)",
          "legendFormat": "{{job}} - {{type}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "custom": { "fillOpacity": 10 }
        }
      },
      "options": {}
    },
    {
      "id": 7,
      "title": "Event Loop Lag (p99)",
      "type": "timeseries",
      "gridPos": { "x": 16, "y": 16, "w": 8, "h": 8 },
      "targets": [
        {
          "expr": "nodejs_eventloop_lag_p99_seconds",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      },
      "options": {}
    }
  ]
}