# ============================================
# Environment Variables Configuration
# ============================================
# Copy this file to .env.local to override defaults for your local setup

# ============================================
# API Base URL
# ============================================
# Local development (default in .env.development):
VITE_API_BASE_URL=http://localhost:8080

# OR use production API for frontend-only development:
# VITE_API_BASE_URL=https://transcendence.keystone-gateway.dev/api

# Production (default in .env.production):
# VITE_API_BASE_URL=/api

# ============================================
# Debug Mode
# ============================================
# Enable console logging and debug features
VITE_DEBUG=true

# ============================================
# WebSocket Configuration
# ============================================
# For real-time pong game communication
# Local:
VITE_WS_URL=ws://localhost:8080

# Production (leave empty to use relative path):
# VITE_WS_URL=

# ============================================
# OAuth 42 Configuration (if needed)
# ============================================
# These might be used for login redirects
# VITE_OAUTH_CLIENT_ID=your_42_client_id
# VITE_OAUTH_REDIRECT_URI=http://localhost:5173/callback

# ============================================
# Feature Flags (optional)
# ============================================
# VITE_ENABLE_3D_PONG=true
# VITE_ENABLE_TOURNAMENTS=true